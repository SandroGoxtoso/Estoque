<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroProduto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button

            android:id="@+id/btn_carregarCamera"
            android:layout_width="198dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_search_box"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Camera"
            android:textAllCaps="false"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_carregarImagem" />

        <EditText
            android:id="@+id/et_codigoBarra"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_marginStart="77dp"
            android:layout_marginTop="228dp"
            android:layout_marginEnd="83dp"
            android:background="@drawable/border_search_box"
            android:fontFamily="sans-serif-medium"
            android:hint="Nome do produto"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/roboto_regular"
            android:text="_______________________________________________________________"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_codigoBarra" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="235dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Codigo:"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/roboto_regular"
            android:text="_______________________________________________________________"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_produto" />

        <Button

            android:id="@+id/btn_cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="101dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/border_search_box"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button

            android:id="@+id/btn_carregarImagem"
            android:layout_width="198dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/border_search_box"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Galeria"
            android:textAllCaps="false"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_nomeProduto"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/border_search_box"
            android:fontFamily="sans-serif-medium"
            android:hint="Prooduto"
            android:inputType="numberDecimal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/et_qtdProduto"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/border_search_box"
            android:fontFamily="sans-serif-medium"
            android:hint="Quantidade"
            android:inputType="numberDecimal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColorHint="#B2B5C2"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/et_valorProduto"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_search_box"
            android:fontFamily="sans-serif-medium"
            android:hint="Preço do produto"
            android:inputType="text|numberDecimal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Preço :"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_qtdProduto" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Quantidade :"
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_nomeProduto" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Produto : "
            android:textColor="#B2B5C2"
            android:textColorHint="#B2B5C2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <ImageView
            android:id="@+id/img_produto"
            android:layout_width="144dp"
            android:layout_height="157dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="31dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="36dp"
            android:onClick="lerCodigo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_produto"
            app:srcCompat="@mipmap/codigo_de_barra" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>